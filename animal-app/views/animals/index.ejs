<section class="container">
  <h1>All Animals</h1>
  <% animals.forEach((animal, i, original) => { %>
    <% if (i === 0) { %>
      <div class="row">
    <% } else if (i !== 0 && i % 3 === 0) { %>
      </div>
      <div class="row">
    <% }; %>
      <div class="col-md-4">
        <div class="thumbnail">
          <div class="caption">
            <h3><%= animal.species %></h3>
            <p><%= animal.description %></p>
            <p><a href="/animals/<%= animal._id %>" class="btn btn-primary" role="button">View</a></p>
          </div>
        </div>
      </div>
    <% if (i === original.length-1) { %>
      </div>
    <% }; %>
  <% }); %>
</section>
